---
import "@/styles/global.css";
import "@fontsource-variable/m-plus-1-code";
import "@fontsource-variable/noto-sans-jp";
import "@fontsource-variable/noto-serif-jp";

import Logo from "@/assets/Logo.svg";
import ThemeIcon from "@/components/ThemeIcon.astro";
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>NPG418</title>
	</head>
	<body>
		<header>
			<nav>
				<a href="/"><Logo width={64} height={64} /></a>
				<ThemeIcon />
			</nav>
		</header>
		<main>
			<slot />
		</main>
		<footer>
			<small>
				Copyright &copy; 2026 NPG418. Licensed under the MIT License.
			</small>
		</footer>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	body {
		font-family: var(--font-sans);

		color: var(--text);
		background-color: var(--background);

		display: grid;
		grid:
			". header ." auto
			". main ." 1fr
			". footer ." auto
			/ minmax(20px, 1fr) minmax(auto, 1200px) minmax(20px, 1fr);
	}

	header {
		grid-area: header;

		> nav {
			display: flex;
			align-items: center;
			justify-content: space-between;
			padding: 1rem;
			margin: auto;
		}
	}

	main {
		grid-area: main;
	}

	footer {
		grid-area: footer;

		text-align: center;
		padding: 1rem;
	}
</style>
